<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: " col-form-label" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :fullname, class: " col-form-label" %>
          <div class="col-10">
            <%= f.text_field :fullname, class: "form-control shadow rounded", placeholder: "Enter a full name" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-form-label" %>
          <div class="col-10"> 
            <%= f.email_field :user_email, class: "form-control shadow rounded", placeholder: "Enter your email address. Please go to \"https://en.gravatar.com/\" to register your image." %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-form-label" %>
          <div class="col-10"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="form-group justify-content-center mt-4">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-success") %>
          <%= link_to 'Cancel', users_path, :class => 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>