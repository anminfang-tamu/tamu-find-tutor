<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= user.fullname %>
          </div>
          <%= gravatar_for user, size: 120 %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to user.username, user_path(user), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(user.user_email, length: 100) %></p>
            <%= link_to "View Profile", user_path(user), class: "btn btn-outline-success" %>
            <% if logged_in? and user == current_user %>
              <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-outline-success" %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago, 
            edited <%= time_ago_in_words(user.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>