<h1 class="text-center mt-5 mb-5"><%= @user.fullname %>'s Profile</h1>

<%= gravatar_for @user, size: 200 %>

<div class="container">
    
    <h3 class="text-center mt-4">Posts</h3>

    <%= render 'posts/post' %>
    
</div>



<div class="container text-center mt-4 mb-5">
    <% if logged_in? and @user == current_user %>
        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-outline-success" %>
    <% end %>
    <%= link_to 'Return', users_path, class: "btn btn-outline-success" %>
</div>

